        <div class="modal-footer">
            <button onclick="closeAddModal()" class="btn btn-outline">Batal</button>
            <button onclick="saveNewProject()" class="btn btn-primary">Simpan ke Cloud</button>
        </div>
    </div>
</div>

<button onclick="toggleTheme()" class="floating-theme-btn" title="Ganti Tema">TEMA</button>

<script>
    // Inisialisasi data kosong, akan diisi oleh Firebase
    window.projectsData = []; 
    let currentRole = 'formulator'; 

    function applyAccessControl() {
        currentRole = document.getElementById('user-role').value;
        const btnAdd = document.getElementById('btn-add-project');
        if (currentRole === 'formulator') {
            btnAdd.classList.remove('hidden');
        } else {
            btnAdd.classList.add('hidden');
        }
    }

    function switchTab(tabId) {
        document.getElementById('projects-section').classList.add('hidden');
        document.getElementById('formula-section').classList.add('hidden');
        document.getElementById('finished-section').classList.add('hidden'); 
        
        document.getElementById('btn-projects').classList.remove('active');
        document.getElementById('btn-formula').classList.remove('active');
        document.getElementById('btn-finished').classList.remove('active');

        document.getElementById(tabId + '-section').classList.remove('hidden');
        const activeBtn = document.getElementById('btn-' + tabId);
        if (activeBtn) activeBtn.classList.add('active');
        
        if (tabId === 'projects') renderProjects();
        if (tabId === 'finished') renderFinished();
    }

    function renderProjects(dataToRender = null) {
        let data = dataToRender || window.projectsData.filter(p => p.status !== 'Finished');
        const body = document.getElementById('projects-table-body');
        
        if (data.length === 0) {
            body.innerHTML = `<tr><td colspan="5" class="text-center" style="padding: 2.5rem; color: var(--c-slate-500);">Tidak ada data riset aktif.</td></tr>`;
            return;
        }

        body.innerHTML = data.map(p => {
            let badgeClass = p.status === 'On Progress' ? 'badge-warning' : 'badge-info';
            return `
            <tr class="clickable" onclick="goToFormula('${p.kode}')">
                <td style="font-weight: 700; color: var(--c-blue-900);">${p.kode}</td>
                <td style="font-weight: 600;">${p.nama}</td>
                <td><span class="badge-info">${p.poinRiset}</span></td>
                <td style="color: var(--c-slate-500); font-size: 0.75rem;">${p.target}</td>
                <td class="text-center"><span class="badge ${badgeClass}">${p.status}</span></td>
            </tr>`;
        }).join('');
    }

    function renderFinished(dataToRender = null) {
        let data = dataToRender || window.projectsData.filter(p => p.status === 'Finished');
        const body = document.getElementById('finished-table-body');
        
        if (data.length === 0) {
            body.innerHTML = `<tr><td colspan="5" class="text-center" style="padding: 2.5rem; color: var(--c-slate-500);">Belum ada formula selesai.</td></tr>`;
            return;
        }

        body.innerHTML = data.map(p => {
            return `
            <tr class="clickable" onclick="goToFormula('${p.kode}')">
                <td style="font-weight: 700; color: var(--c-emerald-700);">${p.kode}</td>
                <td style="font-weight: 600;">${p.nama}</td>
                <td><span class="badge-info">${p.poinRiset}</span></td>
                <td style="color: var(--c-slate-500); font-size: 0.75rem;">${p.target}</td>
                <td class="text-center"><span class="badge badge-success">${p.status}</span></td>
            </tr>`;
        }).join('');
    }

    function goToFormula(code) {
        document.getElementById('lookup-code').value = code;
        switchTab('formula');
        lookupFormula();
    }

    function lookupFormula() {
        const code = document.getElementById('lookup-code').value.toUpperCase();
        const project = window.projectsData.find(p => p.kode === code);

        if (project) {
            document.getElementById('no-formula').classList.add('hidden');
            document.getElementById('formula-result').classList.remove('hidden');
            
            document.getElementById('detail-page-title').innerText = project.kode;
            document.getElementById('res-code').innerText = project.kode;
            document.getElementById('res-name').innerText = project.nama;
            document.getElementById('res-target').innerText = project.target;
            document.getElementById('res-poin').innerText = project.poinRiset;
            
            const statusSelect = document.getElementById('res-status');
            statusSelect.value = project.status || 'On Progress';
            statusSelect.disabled = (currentRole === 'analis'); 

            // Prosedur
            const procBody = document.getElementById('lab-prosedur-body');
            procBody.innerHTML = (project.prosedur || []).map((p, idx) => `
                <tr class="detail-proc-row">
                    <td class="text-center font-bold" style="vertical-align: top;">${idx + 1}</td>
                    <td style="vertical-align: top;"><textarea class="form-control proc-text" ${currentRole === 'analis' ? 'readonly' : ''}>${p.text}</textarea></td>
                    <td style="vertical-align: top;"><textarea class="form-control proc-note">${p.note}</textarea></td>
                </tr>
            `).join('');
            
            // Hasil Uji
            const hasil = project.hasilUji || {};
            document.getElementById('uji-ph').value = hasil.ph || '';
            document.getElementById('uji-viskositas').value = hasil.viskositas || '';
            document.getElementById('uji-busa-awal').value = hasil.busaAwal || '';
            document.getElementById('uji-busa-akhir').value = hasil.busaAkhir || '';
            document.getElementById('uji-catatan').value = hasil.catatan || '';
            
            // Jika ada info analis dari Cloud
            if(hasil.analis) document.getElementById('nama-analis').value = hasil.analis;

            // Formulasi
            const tbody = document.getElementById('formula-table-body');
            const formulaData = project.formula || [];
            tbody.innerHTML = formulaData.map((item, idx) => {
                const mass = item.pct; // Asumsi batch 100g
                // Ambil aktual dari array jika ada tersimpan di cloud, jika tidak kosongkan
                const aktualVal = (project.aktual && project.aktual[idx]) ? project.aktual[idx] : '';
                return `
                    <tr>
                        <td style="font-family: monospace; font-size: 0.75rem;">${item.code}</td>
                        <td style="font-weight: 600;">${item.name}</td>
                        <td class="text-center calc-pct" style="font-weight: 700;">${parseFloat(item.pct).toFixed(2)}%</td>
                        <td class="text-right">
                            <input type="number" step="0.01" class="form-control theo-mass-input" style="text-align: right;" value="${parseFloat(mass).toFixed(2)}" ${currentRole === 'analis' ? 'disabled' : ''} oninput="updateFormulaFromMass()">
                        </td>
                        <td>
                            <input type="number" step="0.01" class="form-control aktual-input" style="text-align: right; color: var(--c-blue-900);" placeholder="0.00" value="${aktualVal}" oninput="updateTotalAktual()">
                        </td>
                    </tr>
                `;
            }).join('');
            
            updateFormulaFromMass();
            updateTotalAktual();
        }
    }

    function updateFormulaFromMass() {
        const massInputs = document.querySelectorAll('.theo-mass-input');
        const pctCells = document.querySelectorAll('.calc-pct');
        let totalMass = 0;
        massInputs.forEach(input => totalMass += parseFloat(input.value) || 0);

        let totalPct = 0;
        if(totalMass > 0) {
            massInputs.forEach((input, idx) => {
                const pct = ((parseFloat(input.value) || 0) / totalMass) * 100;
                pctCells[idx].innerText = pct.toFixed(2) + '%';
                totalPct += pct;
            });
        }
        document.getElementById('total-theo-mass').innerText = totalMass.toFixed(2) + ' g';
        document.getElementById('total-pct').innerText = totalPct.toFixed(2) + '%';
    }

    function updateTotalAktual() {
        const inputs = document.querySelectorAll('.aktual-input');
        let total = 0;
        inputs.forEach(input => total += parseFloat(input.value) || 0);
        document.getElementById('total-actual').innerText = total.toFixed(2) + " g";
    }

    // Fungsi UI Modal
    function openAddModal() {
        document.getElementById('addProjectModal').classList.remove('hidden');
        document.getElementById('formula-builder').innerHTML = '';
        document.getElementById('new-prosedur-builder').innerHTML = '';
        document.getElementById('new-kode').value = '';
        document.getElementById('new-nama').value = '';
        addIngredientRow();
        addNewProcedureRow();
    }
    function closeAddModal() { document.getElementById('addProjectModal').classList.add('hidden'); }

    function addIngredientRow() {
        const builder = document.getElementById('formula-builder');
        const row = document.createElement('div');
        row.className = 'formula-row';
        row.innerHTML = `<input type="text" placeholder="KODE" class="form-control f-code"><input type="text" placeholder="Nama Bahan" class="form-control f-name"><input type="number" placeholder="%" class="form-control f-pct">`;
        builder.appendChild(row);
    }
    function addNewProcedureRow() {
        const builder = document.getElementById('new-prosedur-builder');
        const div = document.createElement('div');
        div.className = 'flex gap-2 items-start new-proc-row';
        div.innerHTML = `<textarea class="form-control p-text flex-1" style="min-height: 40px;" placeholder="Langkah..."></textarea><textarea class="form-control p-note flex-1" style="min-height: 40px;" placeholder="Catatan..."></textarea>`;
        builder.appendChild(div);
    }
    
    function toggleTheme() { document.body.classList.toggle('dark-mode'); }
</script>

<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js";
    import { getAuth, signInWithEmailAndPassword, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js";
    import { getDatabase, ref, set, onValue, push, update } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-database.js";

    // 1. KONFIGURASI FIREBASE ANDA
    // Wajib diganti dengan config dari project Firebase Console Anda
    const firebaseConfig = {
  apiKey: "AIzaSyBzuijdW5pQVJtF-ji8U16rP5gTk3fTy60",
  authDomain: "lab-aqb-research.firebaseapp.com",
  projectId: "lab-aqb-research",
  storageBucket: "lab-aqb-research.firebasestorage.app",
  messagingSenderId: "638683900637",
  appId: "1:638683900637:web:99187387e936f20c004934",
  measurementId: "G-7V5KPHR497"
};

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getDatabase(app);
    const projectsRef = ref(db, 'projects');

    // 2. DAFTAR EMAIL WHITELIST LAB ANDA
    const allowedEmails = [
        "admin.aqb@gmail.com",
        "formulator1@lab.com",
        "analis_utama@lab.com",
        "zaidanprogram@gmail.com"
    ];

    // 3. LISTENER AUTHENTICATION
    onAuthStateChanged(auth, (user) => {
        const loginScreen = document.getElementById('login-screen');
        const mainApp = document.getElementById('main-app');

        if (user) {
            if (allowedEmails.includes(user.email)) {
                loginScreen.classList.add('hidden');
                mainApp.classList.remove('hidden');
                document.getElementById('user-avatar').innerText = user.email.substring(0,2).toUpperCase();
            } else {
                alert("Akses ditolak. Email tidak terdaftar dalam tim riset AQB.");
                signOut(auth);
            }
        } else {
            loginScreen.classList.remove('hidden');
            mainApp.classList.add('hidden');
        }
    });

    // 4. LOGIKA LOGIN & LOGOUT EXPOSED TO WINDOW
    window.loginLab = function() {
        const email = document.getElementById('login-email').value;
        const pass = document.getElementById('login-password').value;
        if(!email || !pass) return alert("Email dan Password wajib diisi.");

        signInWithEmailAndPassword(auth, email, pass).catch((error) => {
            const errDiv = document.getElementById('login-error');
            errDiv.innerText = "Gagal masuk. Periksa kembali kredensial Anda.";
            errDiv.style.display = 'block';
        });
    };

    window.logoutLab = function() {
        signOut(auth).then(() => {
            document.getElementById('login-email').value = '';
            document.getElementById('login-password').value = '';
        });
    };

    // 5. LISTENER REALTIME DATABASE
    onValue(projectsRef, (snapshot) => {
        const data = snapshot.val();
        const projectsArray = [];
        for (let id in data) {
            projectsArray.push({ id, ...data[id] });
        }
        // Balik urutan agar data terbaru ada di atas
        window.projectsData = projectsArray.reverse(); 
        
        // Panggil fungsi render UI bawaan
        renderProjects();
        renderFinished();
        
        // Jika sedang buka detail formulasi, refresh layarnya agar live
        const currentCode = document.getElementById('res-code').innerText;
        if (currentCode) {
            const tempVal = document.getElementById('lookup-code').value;
            document.getElementById('lookup-code').value = currentCode;
            lookupFormula(); 
            document.getElementById('lookup-code').value = tempVal;
        }
    });

    // 6. FUNGSI SIMPAN KE CLOUD
    window.saveNewProject = function() {
        const kode = document.getElementById('new-kode').value.toUpperCase();
        const nama = document.getElementById('new-nama').value;
        if(!kode || !nama) return alert('Kode dan Nama Riset wajib diisi!');

        // Kumpulkan formula
        const fRows = document.querySelectorAll('.formula-row');
        const formula = [];
        fRows.forEach(row => {
            const c = row.querySelector('.f-code').value.toUpperCase();
            const n = row.querySelector('.f-name').value;
            const p = parseFloat(row.querySelector('.f-pct').value) || 0;
            if(c && n && p > 0) formula.push({ code: c, name: n, pct: p });
        });

        // Kumpulkan prosedur
        const pRows = document.querySelectorAll('.new-proc-row');
        const prosedur = [];
        pRows.forEach(row => {
            const text = row.querySelector('.p-text').value;
            const note = row.querySelector('.p-note').value;
            if(text.trim() || note.trim()) prosedur.push({ text, note });
        });

        const newProject = {
            kode, nama,
            poinRiset: document.getElementById('new-poin').value || '-',
            target: document.getElementById('new-target').value || '-',
            status: 'On Progress',
            formula: formula,
            prosedur: prosedur,
            hasilUji: { ph: '', viskositas: '', busaAwal: '', busaAkhir: '', catatan: '' },
            timestamp: Date.now()
        };

        push(projectsRef, newProject).then(() => {
            closeAddModal();
            alert('Protokol Riset berhasil disimpan ke Cloud!');
        });
    };

    window.saveAktual = function() {
        const code = document.getElementById('res-code').innerText;
        const analis = document.getElementById('nama-analis').value.trim();
        if (!analis) return alert("Sistem Keamanan: Wajib isi Nama Analis!");

        const project = window.projectsData.find(p => p.kode === code);
        if (project) {
            const updates = {};
            
            // Simpan Hasil Uji
            updates[`/projects/${project.id}/hasilUji`] = {
                ph: document.getElementById('uji-ph').value,
                viskositas: document.getElementById('uji-viskositas').value,
                busaAwal: document.getElementById('uji-busa-awal').value,
                busaAkhir: document.getElementById('uji-busa-akhir').value,
                catatan: document.getElementById('uji-catatan').value,
                analis: analis,
                lastUpdated: Date.now()
            };

            // Simpan Massa Aktual Array
            const aktualInputs = document.querySelectorAll('.aktual-input');
            const aktualData = [];
            aktualInputs.forEach(input => aktualData.push(parseFloat(input.value) || 0));
            updates[`/projects/${project.id}/aktual`] = aktualData;

            // Simpan perubahan prosedur detail
            const procRows = document.querySelectorAll('.detail-proc-row');
            const updatedProsedur = [];
            procRows.forEach(row => {
                const text = row.querySelector('.proc-text').value;
                const note = row.querySelector('.proc-note').value;
                updatedProsedur.push({ text, note });
            });
            updates[`/projects/${project.id}/prosedur`] = updatedProsedur;

            // Jika role formulator, izinkan ubah status dan persentase master formula
            const role = document.getElementById('user-role').value;
            if (role === 'formulator') {
                updates[`/projects/${project.id}/status`] = document.getElementById('res-status').value;
                
                const pctCells = document.querySelectorAll('.calc-pct');
                project.formula.forEach((item, idx) => {
                    const pctVal = parseFloat(pctCells[idx].innerText);
                    updates[`/projects/${project.id}/formula/${idx}/pct`] = pctVal;
                });
            }

            update(ref(db), updates).then(() => {
                alert("Sinkronisasi Cloud Berhasil! Perubahan direkam.");
            });
        }
    };
</script>

</body>
</html>