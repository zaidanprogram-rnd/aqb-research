                    <div class="flex justify-between items-center mt-6 print-hide">
                        <button onclick="window.print()" class="btn btn-outline">Cetak PDF</button>
                        <button onclick="saveAktual()" class="btn btn-primary">Simpan ke Cloud</button>
                    </div>
                </div>

                <div id="no-formula" class="card card-body text-center" style="padding: 4rem 2rem;">
                    <h4 style="font-size: 1.125rem; font-weight: 700;">Menunggu Input Kode</h4>
                    <p style="font-size: 0.875rem; color: var(--c-slate-500);">Gunakan form pencarian untuk memuat protokol dari Database.</p>
                </div>
            </div>
        </section>
    </main>
</div>

<div id="addProjectModal" class="modal-overlay hidden">
    <div class="modal-box">
        <div class="modal-header">
            <h3 style="font-size: 1.125rem; font-weight: 900;">Registrasi Riset Baru</h3>
            <button onclick="closeAddModal()" class="btn-icon">X</button>
        </div>
        <div class="modal-body">
            <div class="form-grid">
                <div class="form-group"><label class="form-label">Kode Riset</label><input type="text" id="new-kode" class="form-control uppercase"></div>
                <div class="form-group"><label class="form-label">Nama Riset</label><input type="text" id="new-nama" class="form-control"></div>
                <div class="form-group"><label class="form-label">Poin Riset</label><input type="text" id="new-poin" class="form-control"></div>
                <div class="form-group"><label class="form-label">Target Spesifikasi</label><input type="text" id="new-target" class="form-control"></div>
            </div>
            <hr>
            <div>
                <div class="flex justify-between items-center mb-4">
                    <label style="font-size: 0.875rem; font-weight: 700;">Komposisi Formula Master</label>
                    <button onclick="addIngredientRow()" class="btn btn-outline" style="padding: 0.2rem 0.5rem; font-size: 0.75rem;">+ Tambah</button>
                </div>
                <div id="formula-builder"></div>
            </div>
            <hr>
            <div>
                <div class="flex justify-between items-center mb-4">
                    <label style="font-size: 0.875rem; font-weight: 700;">Prosedur Pembuatan</label>
                    <button onclick="addNewProcedureRow()" class="btn btn-outline" style="padding: 0.2rem 0.5rem; font-size: 0.75rem;">+ Tambah</button>
                </div>
                <div id="new-prosedur-builder" style="display: flex; flex-direction: column; gap: 0.5rem;"></div>
            </div>
